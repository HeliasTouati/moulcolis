{% extends 'base.html.twig' %}

{% block title %}Moul Colis - Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="form">
        <div class="form-container">
            <div class="form-content">
                <h1>Connexion</h1>

                {% if error %}
                    <div class="alert">
                        Identifiants incorrects. Veuillez vérifier votre email et mot de passe.
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="user-info">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }},
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

                <form method="post" class="login-form">
                    <div class="form-group email-group">
                        <label for="username" class="form-label">Email</label>
                        <input
                            type="email"
                            value="{{ last_username }}"
                            name="_username"
                            id="username"
                            class="form-control"
                            autocomplete="email"
                            required
                            autofocus
                            placeholder="votre@email.com"
                        >
                    </div>

                    <div class="form-group password-group">
                        <label for="password" class="form-label">Mot de passe</label>
                        <input
                            type="password"
                            name="_password"
                            id="password"
                            class="form-control"
                            autocomplete="current-password"
                            required
                            placeholder="Votre mot de passe"
                        >
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# Section pour "Se souvenir de moi" #}

                    <div class="form-group remember-me-group">
                        <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                        <label for="_remember_me" class="form-check-label">Se souvenir de moi</label>
                    </div>


                    <button class="btn" type="submit" href="{{ path('app_profil') }}">
                        Se connecter
                    </button>
                </form>

                <div class="register-link">
                    Pas encore de compte ? <a href="{{ path('app_registration') }}">Créer un compte</a>
                </div>
            </div>

            <div class="form-infos">
                <h2>Bienvenue !</h2>
                <ul class="info-features">
                    <li>Accès sécurisé à votre compte</li>
                    <li>Gestion de vos informations personnelles</li>
                    <li>Suivi de vos activités</li>
                    <li>Support client dédié</li>
                    <li>Interface intuitive et moderne</li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
