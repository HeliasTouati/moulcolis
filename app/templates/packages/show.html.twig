{% extends 'base.html.twig' %}

{% block title %}Packages{% endblock %}

{% block body %}
    <h1>Packages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ package.id }}</td>
            </tr>
            <tr>
                <th>Poids_kg</th>
                <td>{{ package.poidsKg }}</td>
            </tr>
            <tr>
                <th>Dimensions_cm</th>
                <td>{{ package.dimensionsCm }}</td>
            </tr>
            <tr>
                <th>Reception_at</th>
                <td>{{ package.receptionAt ? package.receptionAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ package.reference }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_packages_index') }}">back to list</a>

    <a href="{{ path('app_packages_edit', {'id': package.id}) }}">edit</a>

    {{ include('packages/_delete_form.html.twig') }}
{% endblock %}
